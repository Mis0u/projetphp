{% extends "template.html.twig" %}

{% block title %}
    <title>Contact</title>
{% endblock %}

{% block body %}
    <body class="global contact">
{% endblock %}

{% block content %}
<h1>Contactez-moi</h1>
<form method ="post" action="">
    <div class ="name input-field">
            <i class="material-icons prefix">account_circle</i>
            <input id="name" type="text" class="validate" name="name">
            <label for="name">Votre nom : *</label>
            {% if errors.name is defined %}
                <span class="error">{{errors.name}}</span> 
            {% endif %}
    </div>
    <div class ="mail input-field">
            <i class="material-icons prefix">email</i>
            <input id="mail" type="text" class="validate" name="mail">
            <label for="mail">Votre email : *</label>
            {% if errors.mail is defined %}
            <span class="error">{{errors.mail}}</span> 
            {% endif %}
    </div>
    <div class="message input-field">
        <i class="material-icons prefix">mode_edit</i>
        <label for="message"> Votre message : *</label>
        <textarea name="message"  class="materialize-textarea" id="message"></textarea>
        {% if errors.message is defined %}
        <span class="error">{{errors.message}}</span> 
            {% endif %}
    </div>

    <div class="button">
            <button class="btn waves-effect waves-light" type="submit" name="action">Envoyer
                    <i class="material-icons right">send</i>
            </button>
    </div>
</form>

{% endblock %}