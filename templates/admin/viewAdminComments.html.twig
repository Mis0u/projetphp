{% extends "admin/templateAdmin.html.twig" %}

{% block title %}<title>Commentaires</title>{% endblock %}

{% block body %}<body class ="comments">{% endblock %}

{% block content %}
<p class="back"><a href="/admin/auth" title="retour"><i class="medium material-icons right">subdirectory_arrow_left</i></a></p>

<div class="content">
    {% if countComms == 0 %}
        <h2 class="noComms">Aucun commmentaires publi√©s pour ce chapitre, <br>enfin pour l'instant...</h2>
        {% else %}
        <table class="responsive-table">
            <thead>
                <tr>
                    <th>Auteur</th>
                    <th>Commentaires</th>
                    <th>Supprimer</th>
                </tr>
            </thead>
            <tbody>
                {% for comment in comments %}

                <tr>
                    <td>{{ comment.author }}</td>
                    <td><a href="#modal{{ comment.id_comm }}" class="update modal-trigger"><i class="material-icons">chrome_reader_mode</i> </a>
                        <div id="modal{{ comment.id_comm }}" class="modal">
                                <div class="modal-content">
                                  {{ comment.content }}
                                </div>
                        </div>
                    </td>
                    <td><a href="#modal2{{ comment.id_comm }}" class="delete modal-trigger"><i class="material-icons">delete</i></a>
                        <div id="modal2{{ comment.id_comm }}" class="modal">
                                <div class="modal-content">
                                  <h4>Voulez-vous vraiment supprimer ce commentaire ?</h4>
                                </div>
                                <div class="modal-footer">
                                  <a href="/admin/delete/comm/{{ comment.id_comm }}" class="modal-close waves-effect waves-green btn-flat">Oui</a>
                                  <a href="#" class="modal-close waves-effect waves-green btn-flat">Non</a>
                                </div>
                        </div>
                    </td>
                </tr>


                {% endfor %}
            </tbody>
        </table>
        {% endif %}
    </div>
{% endblock %}