{% extends "admin/templateAdmin.html.twig" %}

{% block title %}
    <title>AdminLog</title>
{% endblock %}

{% block body %}
    <body class="adminLog">
{% endblock %}

{% block content %}
        <article>
            <form method = "post">
                <h2>Connection de l'administrateur</h2>
                <div class ="username input-field">
                    <i class="material-icons prefix">account_circle</i>
                    <input id="username" type="text" class="validate" name="username" required autofocus>
                    <label for="username">User</label>
                    {% if errors.username is defined %}
                       <span class="errors">{{errors.username}}</span>
                    {% endif %}
            </div>
            <div class ="password input-field">
                    <i class="material-icons prefix">security</i>
                    <input id="password" type="password" class="validate" name="password" required>
                    <label for="password">Password : *</label>
                    {% if errors.password is defined %}
                    <span class="errors">{{errors.password}}</span>
                    {% endif %}
            </div>

            <div class="button">
                <button type="submit"  class="waves-effect waves-light btn">Envoyer
                        <i class="material-icons right">send</i>
                </button>
        </div>
            </form>
        </article>
    
{% endblock %}